{
  "name": "manage-landing-page-master",
  "version": "1.0.0",
  "description": "Coding challenge from Frontend mentor",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass assets/sass/main.scss assets/css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",

    "compile:sass": "node-sass assets/sass/main.scss assets/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' assets/css/style.comp.css -o assets/css/style.prefix.css",
    "compress:css": "node-sass assets/css/style.prefix.css assets/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frankiecflam/manage-landing-page.git"
  },
  "author": "Frankie Lam",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/frankiecflam/manage-landing-page/issues"
  },
  "homepage": "https://github.com/frankiecflam/manage-landing-page#readme",
  "devDependencies": {
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0",
    "autoprefixer": "^10.4.2"
  }
}
